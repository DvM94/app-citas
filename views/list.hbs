<main class="list window">
  <h2>Lista de reservas asociadas al correo {{user.email}}</h2>
  <div class="booked">
    {{#if listBookings}}
    <div class="booked-cards">
      <h3>Reservas actuales</h3>
      {{#each bookings}}
      <div class="card card-new">
        <p>Identificador : {{id}}</p>
        <p>Fecha y hora : {{date}} {{hour}}</p>
      </div>
      {{/each}}
    </div>
    {{/if}}
    {{#if listOldBookings}}
    <div class="booked-cards">
      <h3>Reservas pasadas</h3>
      {{#each oldBookings}}
      <div class="card">
        <p>Identificador : {{id}}</p>
        <p>Fecha y hora : {{date}} {{hour}}</p>
      </div>
      {{/each}}
    </div>
    {{/if}}
  </div>
  <div class="buttons">
    <a href="/" class="button back">Volver</a>
  </div>
</main>